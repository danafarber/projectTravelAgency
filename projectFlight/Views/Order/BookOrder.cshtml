@model projectFlight.Models.Order
@using projectFlight.Models;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BookOrder</title>
</head>
<body>
    <div>



        @using (Html.BeginForm("SummaryOrder", "Order", FormMethod.Post))
        {
            <i>flight id</i>
            @Html.DisplayNameFor(m => m.flightId)
            @Html.DisplayFor(m => m.flightId)
            @Html.Hidden("flightId", Model.flightId)
            <br/>
          
            <i>id</i>@Html.TextBoxFor(m => m.custumerId)
            @Html.Hidden("custId", Model.custumerId)
            <br />


            <i>num tickets:</i>@Html.TextBoxFor(m => m.NoTicket)
            @Html.Hidden("numTic", Model.NoTicket)
            <br />



            @Html.LabelFor(m => m.cardNumber)
            @Html.EditorFor(m => m.cardNumber)
            @Html.Hidden("card", Model.cardNumber)
            <br />

            @Html.LabelFor(m => m.cardDate)
            @Html.EditorFor(m => m.cardDate)
            @Html.Hidden("dateCard", Model.cardDate)

            <br />

            @Html.LabelFor(m => m.cvv)
            @Html.EditorFor(m => m.cvv)
            @Html.Hidden("cvv", Model.cvv)

            <br />


            @Html.LabelFor(m => m.fullName)
            @Html.EditorFor(m => m.fullName)
            @Html.Hidden("fullName", Model.fullName)

            <br />
          





            <input id="Submit1" type="submit" value="Go to payment" />

        }





    </div>
</body>
</html>
